<% if(success && success.length){%>
   <div class="row mt-4">
    <div class="alert alert-success mt-5 alert-dismissible fade show col-4 offset-1 offset-sm-1 offset-md-3 offset-lg-4" role="alert" > <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
   </div>
<%}%>

<% if(error && error.length){%>
 <div class="row mt-4">
    <div class="alert alert-danger mt-5 alert-dismissible fade show col-4 offset-1 offset-sm-1 offset-md-3 offset-lg-4" role="alert" > <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
 </div>
<%}%>